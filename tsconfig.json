{
  "compilerOptions": {
    "outDir": "build",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6"]
  },
  "include": [
    "src/**/**.ts",
    "test/**/**.ts",
    "typings/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
